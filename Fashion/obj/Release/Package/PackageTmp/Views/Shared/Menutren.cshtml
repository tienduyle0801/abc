@model List<MyDb.Entity.Menu>
<div class="call">
    <p><span>Cần Trợ Giúp</span> Hãy Gọi Shop<span class="number">0329412620</span></p>
</div>
<div class="account_desc">
    @{
        var session = (UserLogin)Session[Fashion.Common.CommonParams.USER_SESSION];
    }
    @if (session == null)
    {
        <ul>
            @foreach (var item in Model)
            {
                <li><a href="@item.Link" target="@item.Taget">@item.Text</a></li>
            }
        </ul>
    }
    else
    {
        <ul>
            <li>Hello: @session.UserName</li>
            <li>@Html.ActionLink("Thoát", "DangXuat", "User")</li>
        </ul>
    }
</div>
<div class="clear"></div>

