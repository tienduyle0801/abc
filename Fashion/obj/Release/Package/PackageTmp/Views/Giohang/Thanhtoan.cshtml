@model List<Fashion.Models.GiohangItem>
@{
    ViewBag.Title = "Thanh Toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <div class="section group">
        @if(Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <td>Mã SP</td>
                        <td>Tên SP</td>
                        <td>Ảnh SP</td>
                        <td>Số lượng</td>
                        <td>Đơn giá</td>
                        <td>Thành tiền</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.SanPham.Id</td>
                            <td>@item.SanPham.Name</td>
                            <td><img src="@item.SanPham.Hinh" width="100" /></td>
                            <td><input type="text" class="txtSoluong" data-id="@item.SanPham.Id" value="@item.Soluong" /></td>
                            <td>@item.SanPham.Gia.GetValueOrDefault(0).ToString("N0")</td>
                            <td>@((item.SanPham.Gia.GetValueOrDefault(0) * item.Soluong).ToString("N0"))</td>
                            <td><a href="#" data-id="@item.SanPham.Id" class="btnXoa btn btn-danger">Xoá</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
    <div class="section group">
        <div class="col-md-6">
            @using (Html.BeginForm("Thanhtoan", "Giohang", FormMethod.Post))
            {
                <div class="form-group">
                    <label>Người nhận</label>
                    <input name="nguoinhan" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Điện thoại</label>
                    <input name="sdt" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Địa chỉ</label>
                    <input name="diachi" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input name="email" class="form-control" />
                </div>
                <button type="submit" class="btn btn-success">Đặt Hàng</button>
            }
        </div>

    </div>
</div>


