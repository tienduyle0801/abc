@model List<Fashion.Models.GiohangItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script src="/chung/client/js/controller/giohangController.js"></script>
}
<div class="content">
    <div class="section group">
        @if (Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <td>Mã Sản Phẩm</td>
                        <td>Tên Sản Phẩm</td>
                        <td>Ảnh Sản Phẩm</td>
                        <td>Số Lượng</td>
                        <td>Đơn Giá</td>
                        <td>Thành Tiền</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.SanPham.Id</td>
                            <td>@item.SanPham.Name</td>
                            <td><img src="@item.SanPham.Hinh" width="100" /></td>
                            <td><input type="text" class="txtSoluong" data-id="@item.SanPham.Id" value="@item.Soluong" /></td>
                            <td>@item.SanPham.Gia.GetValueOrDefault(0).ToString("N0")</td>
                            <td>@((item.SanPham.Gia.GetValueOrDefault(0) * item.Soluong).ToString("N0"))</td>
                            <td> <button data-id="@item.SanPham.Id"  class="btnXoa btn btn-danger">Xóa</button> </td>
                        </tr>
                    }
                </tbody>
            </table>

            <button id="btnContinue" class="btn btn-success">Tiếp Tục</button>
            <button id="btnUpdate" class="btn btn-success">Cập Nhật</button>
            <button id="btnDeleteAll" class="btn btn-danger">Xoá Tất Cả</button>
            <button id="btnThanhtoan" class="btn btn-primary">Thanh Toán</button>
        }
        else
        {
            <span class="alert alert-danger">Giỏ Hàng Trống</span>
        }
    </div>
</div>

